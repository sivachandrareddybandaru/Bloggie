@model Bloggie.Web.Models.ViewModels.HomeViewModel



@{
    ViewData["Title"] = "Home Page";
}


<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="colcol-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie - The Developers Blogs
            </h1>
            <p class="lead">
                Welcome to the Bloggie Website where you can find the Courses - CSS,HTML,JAVA SCRIPT ,C SHARP , WEB- HOSTING & Many More .....
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTRSBzDHDFdKeLwG1wPBo0SWncl4XNLhrvpVg&usqp=CAU"
                 alt="Bloggie - Dev blogs"
            class="d-block mx-lg-auto img-fluid " width="300"/>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="d-flex col-6">
            @if(Model != null && Model.Tags.Any())
            {
                foreach(var tag in Model.Tags)
                {
                    <span class=" badge bg-dark me-1 mb-3"> @tag.Name</span>
                }
            }
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if(Model != null && Model.BlogPosts.Any())
            {
                foreach (var blogPost in Model.BlogPosts)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading"
                        class="mb-4 d-block img-fluid"/>
                        <h2 class="mb-2">@blogPost.Heading</h2>
                       
                        <p class="mb-2">
                            
                            
                            Author: @blogPost.Author<br>
                            Published Date :@blogPost.PublishedDate.ToShortDateString()
                        </p>
                        <p class="mb-2">
                            @foreach (var tag in blogPost.Tags)
                            {

                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>
                        <p class="mb-5">@blogPost.ShortDescription</p>
                        <a class="btn btn-dark" asp-area ="" asp-controller="Blogs" asp-action="Index" asp-route-urlHandle="@blogPost.UrlHandle">Read More</a>
                    </div>
                }
            }
        </div>
    </div>
</div>